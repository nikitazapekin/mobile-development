<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000">

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="208dp"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="handleClick"
            android:scaleType="centerInside"
            android:stateListAnimator="@null"
            android:text="Красный"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="handleClick"
            android:scaleType="centerInside"
            android:stateListAnimator="@null"
            android:text="Желтый"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toTopOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="128dp"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="handleClick"
            android:text="Зеленый"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintTop_toTopOf="@+id/button2" />

        <View
            android:id="@+id/green_square1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/green_square3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintStart_toEndOf="@+id/green_square2"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

        <View
            android:id="@+id/green_square2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintStart_toEndOf="@+id/green_square1"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="44dp"
            android:onClick="handleClose"
            android:text="Back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="44dp"
            android:onClick="saveSelectedColor"
            android:text="SAVE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="44dp"
            android:text="LOAD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>