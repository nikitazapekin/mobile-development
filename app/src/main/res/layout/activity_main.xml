<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000">

        <Button
            android:id="@+id/button"
            android:layout_width="141dp"
            android:layout_height="79dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="88dp"
            android:background="#808080"
            android:backgroundTint="@null"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="0dp"
            android:scaleType="center"
            android:stateListAnimator="@null"
            android:text="Красный"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:backgroundTint="@null"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:scaleType="centerInside"
            android:stateListAnimator="@null"
            android:text="Желтый"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="128dp"
            android:layout_height="69dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="56dp"
            android:text="Зеленый"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <View
            android:id="@+id/green_square1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="244dp"
            android:layout_marginTop="96dp"
            android:background="@drawable/neon_red_square"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/green_square2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/neon_yellow_square"
            app:layout_constraintStart_toStartOf="@+id/green_square1"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

        <View
            android:id="@+id/green_square3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="228dp"
            android:background="@drawable/neon_green_square"
            app:layout_constraintStart_toStartOf="@+id/green_square2"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

