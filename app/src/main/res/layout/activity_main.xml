<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000">

        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="64dp"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="handleClick"

            android:text="Красный"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="handleClick"
            android:scaleType="centerInside"
            android:stateListAnimator="@null"
            android:text="Желтый"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="@+id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="208dp"
            android:background="@android:color/white"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="handleClick"
            android:text="Зеленый"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <View
            android:id="@+id/green_square1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="68dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintEnd_toStartOf="@+id/button1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/green_square3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintEnd_toEndOf="@+id/green_square2"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

        <View
            android:id="@+id/green_square2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintEnd_toEndOf="@+id/green_square1"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp"
            android:text="Back"
            android:onClick="handleClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="92dp"
            android:text="SAVE"
            android:onClick="saveSelectedColor"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="92dp"
            android:text="LOAD"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

