<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000">


        <Button
            android:id="@+id/button1"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="76dp"
            android:backgroundTint="@null"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:scaleType="centerInside"
            android:stateListAnimator="@null"
            android:text="Красный"
            android:onClick="handleClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@null"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:scaleType="centerInside"
            android:stateListAnimator="@null"
            android:text="Желтый"
            android:onClick="handleClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="68dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:text="Зеленый"
            android:onClick="handleClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2" />
        <View
            android:id="@+id/green_square1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="228dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/green_square2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="112dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

        <View
            android:id="@+id/green_square3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="212dp"
            android:background="@drawable/neon_gray_square"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/green_square1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
