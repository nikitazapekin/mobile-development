<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:background="#F4D3BE"
    tools:context=".Card"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Упс, что-то пошло не так..."
            android:visibility="gone"
            android:textColor="#FF0000"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCharacters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Characters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <Button
            android:id="@+id/btnStories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Stories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCharacters" />

        <Button
            android:id="@+id/btnCreators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Creators"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnStories" />

        <Button
            android:id="@+id/btnComics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Comics"
            app:layout_constraintEnd_toEndOf="@+id/btnCreators"
            app:layout_constraintTop_toBottomOf="@id/btnCreators" />

        <Button
            android:id="@+id/btnSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Series"
            app:layout_constraintEnd_toEndOf="@+id/btnComics"
            app:layout_constraintTop_toBottomOf="@id/btnComics" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/showPopupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Показать меню"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarSecond"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/Widget.MaterialComponents.Toolbar.Primary" /> -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
