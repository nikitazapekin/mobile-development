<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/main"
    android:background="#F4D3BE"
    tools:context=".MakeOrder"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#AE8871"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/listOfOffers"
            android:layout_width="361dp"
            android:layout_height="359dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <LinearLayout
                android:id="@+id/offersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/emptyOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выберите пиццу"

                    android:textSize="22dp"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/button2"
            android:layout_width="372dp"
            android:layout_height="55dp"
            android:layout_marginTop="13dp"
            android:text="Выбрать"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listOfOffers" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Выбрано:"
            app:layout_constraintStart_toStartOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button2" />


        <ScrollView
            android:id="@+id/listOfBookedOffers"
            android:layout_width="370dp"
            android:layout_height="204dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/dashed_border"
            android:minHeight="200dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <LinearLayout
                android:id="@+id/bookedOffersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">



                <TextView
                    android:id="@+id/emptyBookedOfferss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нет забронированных предложений"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>
        <!--
        <TextView
            android:id="@+id/emptyBookedOffersss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нет забронированных предложений"
            android:textSize="18sp"
            android:visibility="visible" /> -->
        <Button
            android:id="@+id/bookBtn"
            android:layout_width="369dp"
            android:layout_height="55dp"
            android:layout_gravity="center"

            android:text="Сделать выбор"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/listOfBookedOffers" />

    <!--    <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="@+id/listOfBookedOffers"
            tools:layout_editor_absoluteX="251dp" />
-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

